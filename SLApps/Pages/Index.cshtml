@page
@model IndexModel

<div class="row pb-3">
    @foreach (var voiture in Model.Voitures)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px">
                    <div class="card">
                        <img src="@voiture.image_voiture" class="card-img-top rounded" />
                        <p class="card-title h5 text-primary">@voiture.marque_voiture</p>
                        <p class="card-title text-secondary">@voiture.modele_voiture</p>
                    </div>
                    <div>
                        <a asp-page="Voitures/Details" class="btn btn-primary form-control" asp-route-id_voiture="@voiture.id_voiture">Details</a>
                        <a asp-page="Reservations/Create" class="btn btn-primary form-control">Reservez</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>





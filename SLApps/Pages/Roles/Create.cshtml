@page
@model SLApps.Pages.Roles.CreateModel

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Créer Un Role</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Role.nom_role">Nom Role</label>
            <input asp-for="Role.nom_role" class="form-control" />
            <span asp-validation-for="Role.nom_role" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-primary" style="width:150px;">Créer Role</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Retour à la liste</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

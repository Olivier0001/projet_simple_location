@page
@model SLApps.Pages.Roles.IndexModel

<partial name="_Notification" />

<br>
<h2 class="text-primary">Liste des Roles</h2>
<br>
<div class="col-6">
    <a asp-page="create" class="btn btn-primary">
        <i class="bi bi-plus-square"></i> &nbsp;Créer Nouveau Role
    </a>
</div>
<br>
<br>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Nom Role</th>
            <th>Date Creation Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Roles)
        {
            <tr>
                <td>@obj.nom_role</td>
                <td>@obj.date_creation_role</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id_role="@obj.id_role" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id_role="@obj.id_role" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

